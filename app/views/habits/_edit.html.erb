<div id="habit-form" class="pure-g modal">
	<div class="pure-u-1">

		<%= form_for :habit, method: :put, remote: true, html: { class: 'pure-form mar-10' } do |f| %>
			<div class="pure-g">
				<div class="pure-u-1-2 center">
					<%= f.label :kind_good, class: 'pure-radio' do %>
						<%= f.radio_button :kind, :good %>
						Good habit
					<% end %>
				</div>
				<div class="pure-u-1-2 center">
					<%= f.label :kind_bad, class: 'pure-radio' do %>
						<%= f.radio_button :kind, :bad %>
						Bad habit
					<% end %>
				</div>
			</div>

			<fieldset>
				<%= f.text_field :title, class: 'pure-input-1 center', placeholder: 'Enter your habit' %>
				<%= f.text_field :goal, class: 'pure-input-1 center', placeholder: 'Your goal (number)' %>
				<div class="pure-control-group center mar-tb-10">
					<%= f.label :period, 'Period to track:' %>
					<%= f.select :period, [['Week', :week]] %>
				</div>
				<div class="center">
					<div class="pure-g">
						<div class="pure-u-1-2">
							<%= f.button :submit, data: { disable_with: "Saving..."}, id: 'save-habit', class: 'pure-input-2-3 pure-button' do %>
								<i class='icon-good'></i> Save
							<% end %>
						</div>
						<div class="pure-u-1-2">
							<%= f.button :submit, id: 'cancel-habit', class: 'pure-input-2-3 pure-button' do %>
								<i class='icon-bad'></i> Cancel
							<% end %>
						</div>
					</div>
				</div>
			</fieldset>
		<% end %>

	</div>
</div>
