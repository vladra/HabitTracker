<div class="pure-g mar-10">
	<div class="pure-u-1 pure-u-md-1-2">
		<h1>Login</h2>
	</div>

	<div class="pure-u-1 pure-u-md-1-2">

		<%= form_tag login_path, method: :post, class: 'pure-form pure-form-aligned' do %>
			<fieldset>
				<div class="pure-control-group">
					<%= label_tag :email, "Email" %>
					<%= text_field_tag :email %>
				</div>
				<div class="pure-control-group">
					<%= label_tag :password, "Password" %>
					<%= password_field_tag :password %>
				</div>
				<div class="pure-control-group">
					<label></label>
					<%= submit_tag "Login", class: 'pure-button pure-button-primary', :disable_with => 'Submiting...' %>
				</div>
			</fieldset>
		<% end %>

	</div>
</div>
